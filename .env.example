# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# MongoDB Atlas Configuration
# Format: mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://username:password@your-cluster.mongodb.net/PDSAdhesiveSearch?retryWrites=true&w=majority
MONGODB_DB_NAME=PDSAdhesiveSearch
MONGODB_COLLECTION_PRODUCTS=AESearchDatabase
MONGODB_COLLECTION_DOCUMENTS=AdhesivePDSDocumentMaster
MONGODB_COLLECTION_SEARCH=PDSAdhesiveSearchCollection
MONGODB_COLLECTION_PREFERENCES=CustomerPreferences
MONGODB_COLLECTION_KNOWLEDGE=KnowledgeBase

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-5-mini
AZURE_OPENAI_API_VERSION=2024-01-01-preview

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=7d

# Azure AD Configuration
AZURE_AD_TENANT_ID=your-tenant-id
AZURE_AD_CLIENT_ID=your-client-id
AZURE_AD_CLIENT_SECRET=your-client-secret

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Search Configuration
SEARCH_MAX_RESULTS=50
SEARCH_DEFAULT_LIMIT=25
VECTOR_SEARCH_DIMENSIONS=1536
SIMILARITY_THRESHOLD=0.7

# Export Configuration
EXPORT_TIMEOUT_MS=30000
EXPORT_MAX_BATCH_SIZE=100
EXPORT_TEMP_DIR=./temp/exports

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090